%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, class: 'invite' do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        .row
          .col-sm-4
            %fieldset
              = f.text_field :recipient_name, class:'form-control', label: "Friend's Name"
              = f.email_field :recipient_email, class:'form-control', label: "Friend's Email Address"
              = f.text_area :message, class:'span4 form-control', rows: 6, placeholder: "Join this site!", label: "Invite Message"
            %fieldset.form-group.action
              = submit_tag "Send Invitation", class: 'btn btn-info'
