%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, class: 'invite' do |f|
        %form.invite
          %header
            %h1 Invite a friend to join MyFlix!
          %fieldset
            .form-group
              .row
                .col-sm-4
                  =f.text_field :recipient_name, class:'form-control', label: "Friend's Name"
            .form-group
              .row
                .col-sm-4
                  = f.email_field :recipient_email, class:'form-control', label: "Friend's Email Address"
            .form-group
              = f.label :message, "Invite Message"
              .row
                .col-sm-6
                  = f.text_area :message, class:'span4 form-control', rows: 6, placeholder: "Come join this cool site!", label: "Message"
          %fieldset.form-group.action
            %input(type="submit" value="Send Invitation" class="btn btn-default")
